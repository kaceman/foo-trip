{% extends 'base.html.twig' %}

{% block content %}
    <div class="bg-white">
        <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 sm:py-24 lg:px-8">
            <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 lg:grid-cols-1">

                <div class="group relative">
                    <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200 lg:aspect-none group-hover:opacity-75 lg:h-80">
                        <img src="{{ asset('uploads/' ~ destination.image) }}" alt="{{ destination.name }} Image" class="h-full w-full object-cover object-center lg:h-full lg:w-full">
                    </div>
                    <div class="mt-4 flex justify-between">
                        <div>
                            <h3 class="text-sm text-gray-700">
                                <a href="{{ path('app_show', {'id': destination.id}) }}">
                                    <span aria-hidden="true" class="absolute inset-0"></span>
                                    {{ destination.name }}
                                </a>
                            </h3>
                            <p class="mt-1 text-sm text-gray-500">{{ destination.description }}</p>
                        </div>
                        <p class="text-sm font-medium text-gray-900">${{ destination.price }}</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ destination.name }}
{% endblock %}

